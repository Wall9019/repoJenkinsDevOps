pipeline {
    agent {
        docker {
            image 'maven:3.8.6-jdk-11'  // Imagem com Maven e JDK
            args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    
    environment {
        // Define a tag da imagem com base no BUILD_NUMBER (ou "latest" se não houver)
        DOCKER_IMAGE = "wall90/funcionap:${BUILD_NUMBER ?: 'latest'}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM', 
                    branches: [[name: 'main']], 
                    userRemoteConfigs: [[
                        url: 'https://github.com/Wall9019/repoJenkinsDevOps',
                        credentialsId: 'GITHUB_TOKEN'
                    ]]
                ])
            }
        }
        
        stage('Initialize Environment') {
            steps {
                // Instala o cliente Docker no container, se necessário
                sh '''
                    apt-get update && apt-get install -y docker.io
                    docker --version
                '''
            }
        }
        
        stage('Build and Test') {
            steps {
                // Executa o Maven no diretório onde está o POM.xml para evitar o erro de projeto ausente
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo "Construindo a imagem Docker..."
                    // Assume que o Dockerfile está localizado no mesmo diretório do POM.xml
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        sh "docker build -t ${DOCKER_IMAGE} ."
                    }
                }
            }
        }
        
        stage('Security Scan with Trivy') {
            steps {
                script {
                    echo "Executando o scan com Trivy..."
                    // Executa o Trivy via Docker para escanear a imagem construída; captura o código de saída para tratamento sem abortar o pipeline
                    def trivyStatus = sh(script: """
                        docker run --rm -v /var/run/docker.sock:/var/run/docker.sock \\
                            -v \$HOME/.cache/trivy:/root/.cache/trivy \\
                            ghcr.io/aquasecurity/trivy:latest image \\
                            --ignore-unfixed --exit-code 1 --severity CRITICAL ${DOCKER_IMAGE}
                    """, returnStatus: true)
                    
                    echo "Código de saída do Trivy: ${trivyStatus}"
                    if (trivyStatus != 0) {
                        echo "Vulnerabilidades críticas detectadas. Confira o relatório para maiores detalhes."
                    } else {
                        echo "Scan sem vulnerabilidades críticas."
                    }
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    echo "Enviando a imagem para o repositório Docker..."
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }
    }
    
    post {
        always {
            // Efetua logout do Docker para limpar as credenciais
            sh 'docker logout || true'
        }
    }
}
